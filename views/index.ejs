<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Header Section -->
    <header class="hero">
        <h1 class="hero-title"><%= header.mainHeading %></h1>
        <p><%= header.subHeading %></p>
        <div class="hero-buttons">
            <a href="#services" class="btn">View Services</a>
            <a href="#contact" class="btn">Contact Us</a>
        </div>
    </header>

    <!-- Navigation -->
    <nav class="main-nav">
        <ul>
            <li><a href="#about">About</a></li>
            <li><a href="#services">Services</a></li>
            <li><a href="#contact">Contact</a></li>
        </ul>
    </nav>

    <!-- About Section -->
    <section class="about" id="about">
        <h2><%= about.heading %></h2>
        <p><%= about.description %></p>
    </section>

    <!-- Services Section -->
    <section class="services" id="services">
        <h2><%= services.heading %></h2>
        <div class="services-grid">
            <% services.list.forEach(service => { %>
                <div class="service-card">
                    <img src="<%= service.imageUrl %>" alt="<%= service.name %>" style="width: 100%; border-radius: 5px;">
                    <h3><%= service.name %></h3>
                    <p><%= service.description %></p>
                </div>
            <% }); %>
        </div>
    </section>


<!-- Contact Section -->
<section class="contact" id="contact">
    <h2><%= contact.heading %></h2>
    <form id="contact-form">
        <input type="text" name="name" placeholder="Your Name" required>
        <input type="email" name="email" placeholder="Your Email" required>
        <textarea name="message" placeholder="Your Message" required></textarea>
        <button type="submit">Send Message</button>
    </form>
</section>

<script src="https://cdn.emailjs.com/dist/email.min.js"></script>



    <!-- WhatsApp Button -->
    <div class="contact">
        <a href="https://wa.me/1234567890" target="_blank" class="whatsapp">
            <img src="/images/wsp_icon.png" alt="WhatsApp">
        </a>
    </div>

    <footer>
        <p>&copy; 2025 Professional Cleaning Services. All rights reserved.</p>
    </footer>
</body>

<script>
(function() {
    emailjs.init('1YmhXHgHxy9dtEK5j'); // Tu USER ID de EmailJS
  
    const form = document.getElementById('contact-form');
  
    form.addEventListener('submit', function(event) {
        event.preventDefault();
  
        // Enviar el formulario utilizando EmailJS
        emailjs.sendForm('service_limpieza', 'template_zab57rr', this)
            .then(function(response) {
                console.log('Correo enviado correctamente:', response);
                alert('Mensaje enviado correctamente.');
                
                // Limpiar los campos del formulario manualmente
                form.querySelector('input[name="name"]').value = '';
                form.querySelector('input[name="email"]').value = '';
                form.querySelector('textarea[name="message"]').value = '';
            }, function(error) {
                console.log('Error al enviar el correo:', error);
                alert('Hubo un error al enviar el mensaje. Intenta nuevamente.');
            });
    });
})();
  </script>
</html>
